/* miniprogram/pages/index/index.wxss */
.block-view{
  position: relative;
  height: 100vh;
  width: 100%;
  background: #FFF;
}

.center-content{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  animation: shanghua 1s linear forwards;
  color: #E50213
}

@keyframes shanghua{
  0%{height: 0%;width:0%;}
  12.5%{height: 2%;width:-2%;}
  25%{height: 4%;width:-4%;}
  37.5%{height: 2%;width:-2%;}
  50%{height: 0%;width:0%;}
  62.5%{height: -2%;width:2%;}
  75%{height: -4%;width:4%;}
  87.5%{height: -2%;width:2%;}
  1000%{height: 0%;width:0%;}
}
.fix-btn{
  height: 56px;
  line-height: 56px;
  width: 56px;
  border-radius: 50%;
  background: #E50213;
  color: #FFF;
  text-align: center;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  box-shadow: 0 8rpx 20rpx 0 #E502134D;
}
.shadow-page{
  height: 100vh;
  width: 100%;
  background: rgba(0, 0, 0, 0.288);
  position: fixed;
  overflow: hidden;
}