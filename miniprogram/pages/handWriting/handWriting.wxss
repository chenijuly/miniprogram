.handBtn {
  /* height:95vh; */
  display:inline-flex;
  flex-direction:column;
  justify-content:space-between;
  align-content:space-between;
  width:136rpx;
  position:relative;
  float: left;
  margin-top: 46rpx;

}
.handContent {
  width: calc(100% - 166rpx);
  float: left;
  height: 95vh;
  margin-right: 32rpx;
}


.delBtn {
  position: absolute;
  top:25%;
  width:340rpx;
  left:-102rpx;
  height: 88rpx;
  line-height: 88rpx;
  transform: rotate(90deg);
  color:var(--system-info);
  background-color: #ffffff;
  border: 2rpx solid var(--system-info);
  border-radius: 60rpx;
  text-align: center;
  font-size: 36rpx;
}
.disabled-delBtn{
  color:var(--week-color);
  border: 2rpx solid var(--week-color);
}


.delBtn image {
  position: absolute;
  top: 13rpx;
  left: 25rpx;
}

